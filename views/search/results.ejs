<%- layout('search-layout') %>

<!-- legacy container -->
<div id="container">
	
	<div id="dn" class="nima">
		<div id="dn_container">
			<%- include ../partials/header %>
				 <!-- .row -->
		</div> <!-- /journal -->
	</div><!-- #dn_container -->


	<%- include ../partials/modal %>
	<div class="dn-inner-container">
		<div class="row">
			
			<div class="col-md-10 col-sm-10">
				<div class="row">
			<div class="col-md-8 col-sm-8">
				<h2>Results</h2>
				<hr>
				<p>Sort by <div class="btn-group"><button class="btn btn-default active">Alphabetical</button><button class="btn btn-default">Recently Active</button></div></p>
				<% if(typeof query != 'undefined') { %>
					<h1>You searched for: <%- query -%></h1>
				<% } else { %>
					<p>No results matched your search</p>
				<% } %>
				<div>
					<% if(typeof users !== "undefined") { %>

						<% for(var i=0; i<users.length; i++) { %>
						
						<div>
							<div class="row">
								<div class="col-sm-2">
									<img src="<%- users[i].profile.picture.regular %>" style="width:75px;">
								</div>
								<div class="col-sm-10">
									<h6><%- users[i].username %></h6>
									<p><%- users[i].profile.current_city%></p>
									<p><%- users[i].profile.hometown %></p>
								</div>
							</div>						
						</div>
						<%	}	%>
					<% } else {%>
					
					<% } %>
					
					<div class="text-center">
					<br>
						<div class="btn-group">
							<button class="btn btn-default"><</button>
							<button class="btn btn-primary active">1</button>
							<button class="btn btn-default">2</button>
							<button class="btn btn-default">3</button>
							<button class="btn btn-default">4</button>
							<button class="btn btn-default">...</button>
							<button class="btn btn-default">405</button>
							<button class="btn btn-default">></button>
						</div>					
					</div>
				</div>
			</div>
			<div class="col-md-4 col-sm-4 middle-rail">
				<h2>Search</h2>
				<div>
					<h3>Username</h3>
					<div class="form-group">
						<textarea class="form-control"></textarea>
					</div>
				</div>
				<div>
					<h3>Nikkei Interests</h3>
					<br><input type="checkbox" name=""> Community History
					<br><input type="checkbox" name=""> Family Stories
					<br><input type="checkbox" name=""> Festival/Matsuri
					<br><input type="checkbox" name=""> Japanese / Nikkei Food
					<br><input type="checkbox" name=""> Japantowns
					<br><input type="checkbox" name=""> Taiko
					<br><input type="checkbox" name=""> Other
				</div>
				<div>
					<h3>Current City</h3>
					<div class="form-group">
						<input class="form-control" type="text" name="" placeholder="">
					</div>
				</div>
				<div>
					<h3>Hometown</h3>
					<div class="form-group">
						<input class="form-control" type="text" name="" placeholder="">
					</div>
				</div>
				<div>
					<h3>Communication Preference</h3>
					<br><input type="checkbox" name=""> English
					<br><input type="checkbox" name=""> 日本語
					<br><input type="checkbox" name=""> Espanol
					<br><input type="checkbox" name=""> Portugues
				</div>
				<div class="text-center">
					<br>
					<button class="btn ">Search</button>
				</div>
			</div>
		</div>
			</div>
			<div class="col-md-2 col-sm-2">
				<%- include ../partials/sidebar %>
			</div>
		</div>
				
		
	</div><!-- dn inner container -->
	<% include ../partials/footer %>

</div>
