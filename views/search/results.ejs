<%- layout('search-layout') %>

<!-- legacy container -->
<div id="container">
	
	<div id="dn" class="nima">
		<div id="dn_container">
			<%- include ../partials/header %>
				 <!-- .row -->
		</div> <!-- /journal -->
	</div><!-- #dn_container -->


	<%- include ../partials/modal %>
	<div class="dn-inner-container">
		<div class="row">
			
			<div class="col-md-10 col-sm-10">
				<div class="row">
			<div class="col-md-8 col-sm-8">
				<h2>Results</h2>
				<hr>
				<p>Sort by <div class="btn-group text-right"><button class="btn btn-default active">Alphabetical</button><button class="btn btn-default">Recently Active</button></div></p>
				<% if(typeof query != 'undefined') { %>
					<h3>You searched for: <%- query -%></h3>
				<% } else { %>
					<p>No results matched your search</p>
				<% } %>
				<div>
					<% if(typeof users !== "undefined") { %>

						<% for(var i=0; i<8; i++) { %>
						
						<div class="<% if(i %2 == 1) {%>odd<%}%> ">
							<div class="row">
								<div class="col-sm-2">
									<img src="<%- users[i].profile.picture.regular %>" style="width:75px;">
								</div>
								<div class="col-sm-10">
									<h4><%- users[i].profile.firstname + " " + users[i].profile.lastname %></h4>
									<h5><%- users[i].username %></h5>
									<p style="text-transform: capitalize;"><%- users[i].profile.gender %>
									<p>Current City: <%- users[i].profile.current_city%>
									<br>
									Hometown: <%- users[i].profile.hometown %></p>
									<p>Interests:
									<ul>
									<% for(var j in users[i].interests) {%>
										<% if( users[i].interests[j]) {%>
											<li><%- j %></li>
										<% } %>
									<% }%>
									</ul>
									</p>
								</div>
							</div>						
						</div>
						<%	}	%>
					<% } else {%>
					
					<% } %>
					
					<div class="text-center">
					<br>
						<div class="btn-group">
							<button class="btn btn-default"><</button>
							<button class="btn btn-primary active">1</button>
							<button class="btn btn-default">2</button>
							<button class="btn btn-default">3</button>
							<button class="btn btn-default">4</button>
							<button class="btn btn-default">...</button>
							<button class="btn btn-default">405</button>
							<button class="btn btn-default">></button>
						</div>					
					</div>
				</div>
			</div>
			<div class="col-md-4 col-sm-4 middle-rail">
				<h2>Search</h2>
				<div>
					<h3>Username</h3>
					<div class="form-group">
						<textarea class="form-control"></textarea>
					</div>
				</div>
				<div>
					<h3 class="subtitle">Nikkei Interests</h3>
					<br><input type="checkbox" name=""> Community History
					<br><input type="checkbox" name=""> Family Stories
					<br><input type="checkbox" name=""> Festival/Matsuri
					<br><input type="checkbox" name=""> Japanese / Nikkei Food
					<br><input type="checkbox" name=""> Japantowns
					<br><input type="checkbox" name=""> Taiko
					<br><input type="checkbox" name=""> Other
					<br><textarea class="other-textarea" placeholder="Enter other search terms here, separated by commas"></textarea>
				</div>
				<div>
					<h3 class="subtitle">Current City</h3>
					<div class="form-group" style="position:relative;">
						<img src="media/cache/current_city_icon.png" style="position:absolute; top:5px; left:5px;"><input id="id_city" style="padding-left:30px;" class="form-control" type="text" name="" placeholder="">
					</div>
				</div>
				<div>
					<h3 class="subtitle">Hometown</h3>
					<div class="form-group" style="position:relative;">
						<img src="media/cache/home_icon.png" style="position:absolute; top:5px; left:5px;"> <input id="id_hometown" style="padding-left:30px;" class="form-control" type="text" name="" placeholder="">
					</div>
				</div>
				<div>
					<h3 class="subtitle">Communication Preference</h3>
					<br><input type="checkbox" name=""> English
					<br><input type="checkbox" name=""> 日本語
					<br><input type="checkbox" name=""> Espanol
					<br><input type="checkbox" name=""> Portugues
				</div>
				<div class="text-center">
					<br>
					<button class="btn btn-lg btn-primary">Search</button>
				</div>
			</div>
		</div>
			</div>
			<div class="col-md-2 col-sm-2">
				<%- include ../partials/sidebar %>
			</div>
		</div>
				
		
	</div><!-- dn inner container -->
	<% include ../partials/footer %>
<script async defer
    src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDzycUlwH3NrMq_i3ohLDzJHPjZe4FsMQc&libraries=places&callback=initAutoComplete"></script>
<script type="text/javascript">
function initAutoComplete(){
	 var inputHome = document.getElementById('id_hometown');
	 var inputCurr = document.getElementById('id_city');

	 var autocomplete = new google.maps.places.Autocomplete(inputHome);
	 var autocomplete = new google.maps.places.Autocomplete(inputCurr);
     
     

}
</script>
</div>
