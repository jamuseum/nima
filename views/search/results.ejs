<%- layout('search-layout') %>

<!-- legacy container -->
<div id="container">
	
	<div id="dn" class="nima">
		<div id="dn_container">
			<%- include ../partials/header %>
				 <!-- .row -->
		</div> <!-- /journal -->
	</div><!-- #dn_container -->


	<%- include ../partials/modal %>
	<div class="dn-inner-container">
		<div class="row">
			
			<div class="col-md-12">
				
			</div>
		</div>
				
		<div class="row">
			<div class="col-md-8">
				<h2>Results</h2>
				<hr>
				<p>Sort by <div class="btn-group"><button class="btn btn-default">Alphabetical</button><button class="btn btn-default">Recently Active</button></div></p>
				<% if(typeof query != 'undefined') { %>
					<h1>You searched for: <%- query -%></h1>
				<% } else { %>
					<p>No results matched your search</p>
				<% } %>
				<div>
					<p>Here are the closest matches we found:</p>
				</div>
			</div>
			<div class="col-md-4">
				<h2>Search</h2>
				<div>
					<h3>Username</h3>
					<textarea></textarea>
				</div>
				<div>
					<h3>Nikkei Interests</h3>
					<input type="checkbox" name=""> Community History
					<input type="checkbox" name=""> Family Stories
					<input type="checkbox" name=""> Festival/Matsuri
					<input type="checkbox" name=""> Japanese / Nikkei Food
					<input type="checkbox" name=""> Japantowns
					<input type="checkbox" name=""> Taiko
					<input type="checkbox" name=""> Other
				</div>
				<div>
					<h3>Current City</h3>
					<input type="text" name="" placeholder="">
				</div>
				<div>
					<h3>Hometown</h3>
					<input type="text" name="" placeholder="">
				</div>
				<div>
					<h3>Communication Preference</h3>
					<input type="checkbox" name=""> English
					<input type="checkbox" name=""> 日本語
					<input type="checkbox" name=""> Espanol
					<input type="checkbox" name=""> Portugues
				</div>
				<div class="text-center">
					<button class="btn btn-default">Submit</button>
				</div>
			</div>
		</div>
	</div><!-- dn inner container -->
	<% include ../partials/footer %>

</div>
